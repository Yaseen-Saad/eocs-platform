<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= problemData ? problemData.title : 'Problem ' + problemId %> - Section <%= section %> - EOCS Platform</title>
    <link rel="stylesheet" href="/public/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    
    <!-- MathJax for LaTeX support -->
    <script>
        MathJax = {
            tex: {
                inlineMath: [['$', '$'], ['\\(', '\\)']],
                displayMath: [['$$', '$$'], ['\\[', '\\]']],
                processEscapes: true,
                processEnvironments: true
            },
            options: {
                skipHtmlTags: ['script', 'noscript', 'style', 'textarea', 'pre', 'code']
            }
        };
    </script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
</head>
<body>
    <div class="problem-container">
        <header class="problem-header">
            <div class="header-content">
                <div class="breadcrumb">
                    <a href="/platform">
                        <i class="fas fa-arrow-left"></i>
                        Back to Platform
                    </a>
                </div>
                <div class="problem-title">
                    <h1><%= problemData ? problemData.title : 'Problem ' + problemId %></h1>
                    <div class="problem-meta">
                        <span class="section-info">Section <%= problemData ? problemData.section : section %> - <%= section %></span>
                        <span class="team-info">Team: <%= teamId %></span>
                    </div>
                </div>
            </div>
        </header>

        <main class="problem-main">
            <div class="problem-content">
                <div class="problem-description">
                    <h2>Problem Statement</h2>
                    <div class="problem-text">
                        <% if (problemData) { %>
                            <div class="problem-main-description">
                                <%- problemData.description.replace(/\$\$(.*?)\$\$/g, '$$$$1$$').replace(/\$(.*?)\$/g, '$$$1$$') %>
                            </div>
                            
                            <% if (problemData.sections && problemData.sections.has(section)) { %>
                                <% const sectionData = problemData.sections.get(section); %>
                                <div class="section-details">
                                    <h3><%= sectionData.title %> (<%= sectionData.maxPoints %> points)</h3>
                                    <div class="section-description">
                                        <%- sectionData.description.replace(/\$\$(.*?)\$\$/g, '$$$$1$$').replace(/\$(.*?)\$/g, '$$$1$$') %>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="section-fallback">
                                    <h3>Section <%= section %></h3>
                                    <p>Please implement your solution for this section of the problem.</p>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="no-problem-data">
                                <h3>Problem <%= problemId %> - Section <%= section %></h3>
                                <p>Problem details are loading...</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="submission-section">
                    <h2>Submit Your Solution</h2>
                    
                    <!-- Submission Status Check -->
                    <div id="submission-status" class="submission-status">
                        Checking submission status...
                    </div>

                    <!-- Submission Form -->
                    <form id="submission-form" class="submission-form" style="display: none;">
                        <div class="form-group">
                            <label for="language">Programming Language:</label>
                            <select id="language" name="language" required>
                                <option value="">Select Language</option>
                                <option value="python">Python</option>
                                <option value="cpp">C++</option>
                                <option value="java">Java</option>
                                <option value="javascript">JavaScript</option>
                                <option value="c">C</option>
                                <option value="csharp">C#</option>
                                <option value="php">PHP</option>
                                <option value="ruby">Ruby</option>
                                <option value="go">Go</option>
                                <option value="rust">Rust</option>
                                <option value="matlab">MATLAB</option>
                                <option value="r">R</option>
                                <option value="julia">Julia</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="code">Your Solution Code:</label>
                            <textarea id="code" name="code" rows="20" placeholder="Paste your solution code here..." required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="explanation">Explanation (Optional):</label>
                            <textarea id="explanation" name="explanation" rows="4" placeholder="Briefly explain your approach..."></textarea>
                        </div>

                        <button type="submit" class="submit-btn">
                            <i class="fas fa-paper-plane"></i>
                            Submit Solution
                        </button>
                    </form>

                    <!-- Already Submitted Message -->
                    <div id="already-submitted" class="already-submitted" style="display: none;">
                        <div class="success-message">
                            <i class="fas fa-check-circle"></i>
                            <h3>Section Already Solved!</h3>
                            <p>You have already successfully solved this section.</p>
                        </div>
                    </div>

                    <!-- Pending Review Message -->
                    <div id="pending-review" class="pending-review" style="display: none;">
                        <div class="pending-message">
                            <i class="fas fa-clock"></i>
                            <h3>Submission Under Review</h3>
                            <p>Your submission is currently being reviewed by the judges. Please wait for the results.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="problem-footer">
            <p><a href="/platform">‚Üê Back to Platform</a> | <a href="/scoreboard">View Scoreboard</a></p>
        </footer>
    </div>

    <script>
        // Check submission status when page loads
        async function checkSubmissionStatus() {
            try {
                const response = await fetch(`/api/submission-status/<%= problemId %>/<%= section %>`);
                const data = await response.json();
                
                const statusDiv = document.getElementById('submission-status');
                const formDiv = document.getElementById('submission-form');
                const submittedDiv = document.getElementById('already-submitted');
                const pendingDiv = document.getElementById('pending-review');

                if (data.status === 'correct') {
                    statusDiv.style.display = 'none';
                    submittedDiv.style.display = 'block';
                } else if (data.status === 'pending') {
                    statusDiv.style.display = 'none';
                    pendingDiv.style.display = 'block';
                } else {
                    statusDiv.style.display = 'none';
                    formDiv.style.display = 'block';
                }
            } catch (error) {
                console.error('Error checking submission status:', error);
                document.getElementById('submission-status').innerHTML = 
                    '<div class="error">Error checking submission status. Please refresh the page.</div>';
            }
        }

        // Handle form submission
        document.getElementById('submission-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const submitBtn = this.querySelector('.submit-btn');
            const originalText = submitBtn.innerHTML;
            
            // Disable button and show loading
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';
            
            try {
                const response = await fetch(`/submit/<%= problemId %>/<%= section %>`, {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Submission successful! Your solution has been submitted for review.');
                    // Refresh the page to update status
                    window.location.reload();
                } else {
                    alert('Submission failed: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Submission error:', error);
                alert('Submission failed. Please try again.');
            } finally {
                // Re-enable button
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Check status on page load
        document.addEventListener('DOMContentLoaded', checkSubmissionStatus);

        // Auto-resize textarea
        const codeTextarea = document.getElementById('code');
        if (codeTextarea) {
            codeTextarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = this.scrollHeight + 'px';
            });
        }
    </script>
</body>
</html>
